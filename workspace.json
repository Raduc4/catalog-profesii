{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/next"
  },
  "defaultProject": "frontend",
  "schematics": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  },
  "projects": {
    "admin": {
      "root": "packages/admin",
      "sourceRoot": "packages/admin",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@nrwl/next:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "root": "packages/admin",
            "outputPath": "dist/packages/admin"
          },
          "configurations": {
            "production": {}
          }
        },
        "serve": {
          "builder": "@nrwl/next:server",
          "options": {
            "buildTarget": "admin:build",
            "dev": true
          },
          "configurations": {
            "production": {
              "buildTarget": "admin:build:production",
              "dev": false
            }
          }
        },
        "export": {
          "builder": "@nrwl/next:export",
          "options": {
            "buildTarget": "admin:build:production"
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/packages/admin"
          ],
          "options": {
            "jestConfig": "packages/admin/jest.config.js",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/admin/**/*.{ts,tsx,js,jsx}"
            ]
          }
        }
      }
    },
    "admin-e2e": {
      "root": "packages/admin-e2e",
      "sourceRoot": "packages/admin-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "packages/admin-e2e/cypress.json",
            "tsConfig": "packages/admin-e2e/tsconfig.e2e.json",
            "devServerTarget": "admin:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "admin:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/admin-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    },
    "backend": {
      "root": "packages/backend",
      "sourceRoot": "packages/backend/src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@nrwl/node:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "outputPath": "dist/packages/backend",
            "main": "packages/backend/src/main.ts",
            "tsConfig": "packages/backend/tsconfig.app.json",
            "assets": [
              "packages/backend/src/assets"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "packages/backend/src/environments/environment.ts",
                  "with": "packages/backend/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@nrwl/node:execute",
          "options": {
            "buildTarget": "backend:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/backend/**/*.ts"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/packages/backend"
          ],
          "options": {
            "jestConfig": "packages/backend/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "frontend": {
      "root": "packages/frontend",
      "sourceRoot": "packages/frontend",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@nrwl/next:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "root": "packages/frontend",
            "outputPath": "dist/packages/frontend"
          },
          "configurations": {
            "production": {}
          }
        },
        "serve": {
          "builder": "@nrwl/next:server",
          "options": {
            "buildTarget": "frontend:build",
            "dev": true
          },
          "configurations": {
            "production": {
              "buildTarget": "frontend:build:production",
              "dev": false
            }
          }
        },
        "export": {
          "builder": "@nrwl/next:export",
          "options": {
            "buildTarget": "frontend:build:production"
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/packages/frontend"
          ],
          "options": {
            "jestConfig": "packages/frontend/jest.config.js",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/frontend/**/*.{ts,tsx,js,jsx}"
            ]
          }
        },
        "storybook": {
          "builder": "@nrwl/storybook:storybook",
          "options": {
            "uiFramework": "@storybook/react",
            "port": 4400,
            "config": {
              "configFolder": "packages/frontend/.storybook"
            }
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        },
        "build-storybook": {
          "builder": "@nrwl/storybook:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "uiFramework": "@storybook/react",
            "outputPath": "dist/storybook/frontend",
            "config": {
              "configFolder": "packages/frontend/.storybook"
            }
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        }
      }
    },
    "frontend-e2e": {
      "root": "packages/frontend-e2e",
      "sourceRoot": "packages/frontend-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "packages/frontend-e2e/cypress.json",
            "tsConfig": "packages/frontend-e2e/tsconfig.e2e.json",
            "devServerTarget": "frontend:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "frontend:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/frontend-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    }
  }
}